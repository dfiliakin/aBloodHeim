{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2016",
        "lib": ["dom", "es6"],

        /* Modules */
        "module": "commonjs",
        "rootDir": "./src",
        "resolveJsonModule": true,

        /* JavaScript Support */
        "allowJs": true,
        "jsx": "react",

        /* Emit */
        "outDir": "build",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,

        /* Completeness */
        "skipLibCheck": true,

        "paths": {
            "@/api/*": ["./src/api/*"],
        }
    },
    "exclude": ["webpack.config.js"]
}
